@model IEnumerable<ProfessorManagement.Models.Professor_Request>

@{
    ViewData["Title"] = "Index";
}

<h2>Request</h2>

<a class="btn btn-outline-primary" asp-action="RejectRequest">Rejected requests</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professor.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor.CI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request.Gestion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Professor.Name)
                    @Html.DisplayFor(modelItem => item.Professor.LastName)
                    @Html.DisplayFor(modelItem => item.Professor.SecondLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Professor.CI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Professor.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Request.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Request.Gestion)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="DetailsRequest" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-info" asp-action="Response" asp-route-id="@item.Id">Response</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Professors" asp-action="Index">Back</a>
