@model ProfessorManagement.Models.Professor_Request
@{
    ViewData["Title"] = "Detail Request";
    string status = "Pending";
}

<div>
    <h2>Detail</h2>
</div>
<div>
    <h4>Request</h4>
    <a class="btn btn-outline-primary" asp-action="ShowRequests">Back to list</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChangeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChangeDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewStatus)
        </dt>
        <dd class="col-sm-10">
            @if(Model.NewStatus == 0)
            {
                <label>@status</label>
            }
            <label>Rejected</label>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.Name)
            @Html.DisplayFor(model => model.Professor.LastName)
            @Html.DisplayFor(model => model.Professor.SecondLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor.CI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.CI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.Degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.Degree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.Gestion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.Gestion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.Comment)
        </dd>
    </dl>
</div>
    