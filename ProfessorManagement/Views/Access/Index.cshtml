@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="~/css/style.css">
  <title>Formulario Registro</title>
</head>
<body>
  <section class="form-register">
     <h4>Iniciar Sesión</h4>
        <form asp-action="Index">
            <input class="controls" type="email" placeholder="Ingrese su Correo" asp-for="Email">
            <input class="controls" type="password" placeholder="Ingrese su Contraseña" asp-for="Password">
            <input class="botons" type="submit">
            <p><a asp-controller="Access" asp-action="Create">¿Quiero Registrarme?</a></p>
            <p><a asp-controller="Home" asp-action="PasswordRecovery">¿Olvidé Mi Contraseña?</a></p>
         </form> 
    </section>
</body>
</html>