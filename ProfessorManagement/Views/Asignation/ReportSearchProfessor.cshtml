@model IEnumerable<ProfessorManagement.Models.Professor_Subject>;
@{
    ViewData["Title"] = "Search Subject Professors";
}

@using (Html.BeginForm())
{
    @Html.TextBox("searchString", "", new{@class="form-control"})
    <br />
    <input type="submit" value="Search" asp-action="ReportSearchProfessor" class="btn btn-outline-dark form-control"/>
}



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.professor.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subject.Area)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.professor.Name)
                    @Html.DisplayFor(modelItem => item.professor.LastName)
                    @Html.DisplayFor(modelItem => item.professor.SecondLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.professor.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subject.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subject.Area)
                </td>
            </tr>
        }
    </tbody>
</table>
