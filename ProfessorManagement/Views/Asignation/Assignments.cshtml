@model ProfessorManagement.Models.Professor_Subject

@{
    ViewData["Title"] = "Create";
}

<h4>New assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfessorId" class="control-label"></label>
                <select name="professorId" class="form-control" asp-items="ViewBag.ProfessorId"></select>
            </div>
             <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select name="subjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Grade</label>
                <select class="form-control" name="gradeId">
                    @foreach (Grade grade in (List<Grade>)ViewBag.GradeId)
                    {
                        <option value="@grade.Id">@grade.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAssignments">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
